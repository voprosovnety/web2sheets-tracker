# -----------------------------------------------------------------------------
# Google Sheets configuration
# -----------------------------------------------------------------------------
# Path to service account JSON key (mounted via ./credentials)
GOOGLE_SERVICE_ACCOUNT_FILE=credentials/service_account.json

# ID of the target Google Sheet (from URL)
GOOGLE_SHEET_ID=

# Default worksheet for product data
GOOGLE_SHEET_WORKSHEET=Sheet1

# Name of the sheet tab that lists input URLs and per-URL configs
INPUT_SHEET_NAME=Inputs

# Name of the sheet tab that stores run logs
LOG_SHEET_NAME=Logs


# -----------------------------------------------------------------------------
# Telegram alerts
# -----------------------------------------------------------------------------
# Bot token and chat ID for Telegram notifications
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=


# -----------------------------------------------------------------------------
# Alert tuning
# -----------------------------------------------------------------------------
# Global threshold for price change alerts (in percent)
PRICE_DELTA_PCT=2

# Whether to alert on availability changes (true/false)
ALERT_ON_AVAILABILITY=true


# -----------------------------------------------------------------------------
# Email alerts (optional)
# -----------------------------------------------------------------------------
# SMTP server connection
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Recipients (comma-separated)
ALERT_EMAIL_TO=

# Use TLS (true/false)
SMTP_USE_TLS=true

# Global toggle for email notifications
NOTIFY_EMAIL=false